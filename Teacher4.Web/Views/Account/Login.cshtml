@model Teacher4.Core.DTOs.LoginViewModel
@{
    ViewData["Title"] = "ورود";
    Layout = "~/Views/Shared/_Account.cshtml";
}


<!------------------------------  Start Body  ---------------------------->
<section class="section">
    <div class="container">
        <div class="columns body  ">
            <div class="column identity-center is-4 notification is-warning is-light box">
                <div class="mb-5 has-text-centered">
                    <h1 class="title is-5">ورود به سایت</h1>
                </div>
                <!---------------------------  LogIns  ------------------------->
                <form asp-action="Login" method="post">
                    <div class="is-centered mx-3">
                        <div class="field">
                            <div class="control  has-icons-right">
                                <input asp-for="Email" class="input is-warning is-small has-text-centered" type="text"
                                       placeholder="ایمیل">
                                <span class="icon is-small is-right">
                                    <i class="fas fa-user"></i>
                                </span>
                            </div>
                        </div>

                        <span asp-validation-for="Email" class="has-text-danger is-size-7"></span>
                        <div class="field">
                            <div class="control  has-icons-right">
                                <input asp-for="Password" class="input is-warning is-small has-text-centered" type="password"
                                       placeholder="گذر واژه">
                                <span class="icon is-small is-right">
                                    <i class="fas fa-lock"></i>
                                </span>
                            </div>
                        </div>
                        <span asp-validation-for="Password" class="has-text-danger is-size-7"></span>

                        <button class="button is-warning is-small is-fullwidth">ورود</button>

                        <div class="columns  my-1 is-mobile">
                            <div class="column">
                                <label class="checkbox">
                                    <input asp-for="RememberMe" type="checkbox">
                                    <span class="is-size-7 "> مرا به خاطر بسپار</span>
                                </label>
                            </div>
                            <div class="column">
                                <a href="/ForgotPassword" class="is-size-7 "> بازیابی رمز عبور</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</section>