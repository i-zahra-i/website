<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/png" href="/Image/iconTeacher4.png" sizes="128x128">
    <title>     @ViewData["Title"]  </title>
    <!--<link rel="stylesheet" href="../Css/Bulma/css/bulma.min.css">
    <link rel="stylesheet" href="../Css/all.min.css">-->
    <link rel="stylesheet" href="  https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.2/css/bulma.min.css">
    <link rel="stylesheet" href="/Css/AllSelectStyle.css">
    <!--<link rel="stylesheet" href="../Bulma/css/debug.css">-->
</head>

<body>
    <!------------------------------  Start Top Menu  ---------------------------->
    <section>
        <div class="main-menu">
            <div class="container">
                <nav class="level is-mobile">
                    <!-- Left side -->
                    <div class="level-left is-mobile">


                    </div>
                    <!-- Right side -->
                    <div class="level-right is-mobile">

                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="level-item">
                                <a href="/UserPanel" class="navbar-item is-size-7-mobile">
                                    @User.Identity.Name ، خوش آمدی
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="level-item">
                                <a href="/Login" class="navbar-item is-size-7-mobile">
                                    ورود
                                </a>
                            </div>
                            <div class="level-item">
                                <a href="/Register" class="navbar-item is-size-7-mobile ">
                                    عضویت
                                </a>
                            </div>
                        }
                        <div class="level-item">
                            <a href="/" class="navbar-item is-size-7-mobile">
                                خانه
                            </a>
                        </div>
                    </div>

                </nav>
            </div>
        </div>
    </section>
    <div class="my5"><br></div>
    <div class="my5"><br></div>
    <!------------------------------  Start Body  ---------------------------->
    @RenderBody()

    <!------------------------------  Start Script  ---------------------------->
    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin="anonymous"></script>
    <script src="/Js/Style.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>